---
const isProd = import.meta.env.PROD;
const code = isProd ? import.meta.env.ATLANT_G_A_CODE : "GoogleAnalytics";
---

<!-- Google counter -->
<script
  define:vars={{ code }}
  async
  src=`https://www.googletagmanager.com/gtag/js?id=${code}`></script>

<script define:vars={{ code }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", code);
</script>
