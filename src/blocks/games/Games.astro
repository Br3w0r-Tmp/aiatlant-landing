---
import content from '../../content/atlant.json';

const {games} = content;
const VERTICAL_GAP = '43px';
---
<section id={games.id}>
  <header>
    <h2>{games.title}</h2>
    <div class="search">
      <label for="game-search">Найти</label>
      <input type="text" id="game-search">
    </div>
  </header>
  <ul class="list">
    {games.list.map((game) => (
      <li data-gameid={game.id}>
        <article class="gameCard">
          {game.isConcept && <i>{games.strings.concept}</i>}
          <picture>
            {/* todo sources */}
            <img width="200" src={`images/${game.pic}-1x.png`} alt="TODO alttext">
          </picture>
          <b>{game.title}</b>
          {game.description.map((item) => (
            <p>{item}</p>
          ))}
          <p class="traits">
            {games.strings.traits}:<br>
            {game.traits}
          </p>
          <div>
            <button>{games.strings.moar}</button>
            <a href={game.link.href}>
              {games.statuses[game.status]}
            </a>
          </div>
        </article>
        {/* TODO - Modal */}
      </li>
    ))}
  </ul>
</section>

<style define:vars={{VERTICAL_GAP}}>
  section {
    position: relative;
    z-index: 2;
    margin-top: var(--gap-l);
    border-radius: var(--radius-xl);
    padding: 68px 48px 0;
    background-color: var(--primary-1);
    outline: 1px solid #eee;
    color: var(--text);
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  h2 {
    font-size: 80px;
    line-height: 86px;
    color: var(--text);
  }
  .list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--VERTICAL_GAP) var(--gap-xl);
  }
</style>