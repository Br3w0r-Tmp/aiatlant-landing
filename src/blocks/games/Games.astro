---
import content from '../../content/atlant.json';
import Card from './Card.astro';
import Search from './Search.astro';

const {games} = content;
---
<section class="games" id={games.id}>
  <header>
    <h2>{games.title}</h2>
    <Search />
  </header>
  <div class="scroll-container">
    <ul class="list">
      {games.list.map((game) => (
        <li class="gameItem" data-name={game.title}>
          <Card game={game} />
          {/* TODO - Modal */}
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  section {
    position: relative;
    z-index: 2;
    margin-top: var(--gap-l);
    border-radius: var(--radius-xl);
    padding: 68px 48px 42px;
    background-color: var(--primary-1);
    color: var(--text);
    overflow: hidden;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 64px;
  }

  h2 {
    font-size: 80px;
    line-height: 86px;
    color: var(--text);
  }

  .scroll-container {
    max-height: 1114px;
    overflow-y: auto;
    margin-right: -48px;
    padding-right: 24px;
  }

  .scroll-container::-webkit-scrollbar {
    width: 16px;
    height: 16px;
  }

  .scroll-container::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.16); /* Цвет ползунка */
    border-radius: 37px;
  }

  .scroll-container::-webkit-scrollbar-track {
    background-color: rgba(98, 44, 188, 0.43);
    border-radius: 37px;
  }

  .list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 42px var(--gap-xl);
    list-style: none;
    padding: 0;
    position: relative;
    overflow: hidden;
    padding-bottom: 50px;
  }

  section:after {
    content: '';
    pointer-events: none;
    position: absolute;
    bottom: -50px;
    left: 0;
    width: 100%;
    height: 384px;
    background: linear-gradient(0.00deg, rgb(0, 0, 0) 14.848%,rgba(0, 0, 0, 0) 88.707%);
  }

  .gameItem {
    transition: 0.3s ease;
    transition-property: opacity, transform;
  }

  li.hidden {
    opacity: 0;
    translate: 0 -100%;
    order: 1000;
  }
</style>

<script>
  const wrap = document.querySelector('.games') as HTMLElement;

  const searchInput = document.querySelector('.search__input') as HTMLInputElement;

  const cards = wrap.querySelectorAll('.gameItem');
  console.log(cards)


  searchInput.addEventListener('input', (event) => {
    const filterValue = (event.target as HTMLInputElement).value.toLowerCase();
    
    cards.forEach(card => {
        const cardName = (card as HTMLElement).dataset.name?.toLowerCase() || '';
        
        if (cardName.includes(filterValue)) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
        }
    });
  });
</script>