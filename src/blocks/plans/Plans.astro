---
import content from '../../content/atlant.json';

const {plans} = content;
---
<section id={plans.id}>
  <h2>{plans.title}</h2>
  <div class="content">
    <ol class="plan__list">
      {plans.list.map((item) => (
        <li class="plan__item">
          <p class="plan__name">{item.title}</p>
          <p class="plan__description">{item.text}</p>
        </li>
      ))}
    </ol>
  </div>
  <figure class="illustration">
    <img width="500" src="/images/heroes-3x.png" alt="dnd characters" />
  </figure>
</section>

<style>
  section {
    position: relative;
    z-index: 2;
    margin-top: var(--gap-l);
    color: var(--text);
    outline: 1px solid #eee;
  }
  h2 {
    font-size: 80px;
    line-height: 86px;
    color: var(--text);
    margin-bottom: 65px;
    margin-left: 101px;
    margin-top: 136px;
  }

  .plan__list {
    width: 530px;
    margin: 0;
    padding: 0;
  }

  .plan__item {
    margin-bottom: 62px;
  }
  .plan__name {
    color: var(--accent-2-secondary);
    margin-bottom: var(--gap-xxl);
    font-weight: 400;
    font-size: 32px;
    line-height: 21px;
  }

  .plan__description {
    font-size: 16px;
    line-height: 21px;
    font-weight: 400;
  }

  .illustration {
    position: absolute;
    right: 15%;
    top: 15%;
  }
</style>