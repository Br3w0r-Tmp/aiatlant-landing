---
import content from '../../content/atlant.json';
import PlanList from './PlanList.astro';

const {plans} = content;
---
<section id={plans.id}>
  <h2>{plans.title}</h2>
  <div class="content">
    <PlanList list={plans.list} />
  </div>
  <figure class="illustration">
    <img width="500" src="/images/heroes-3x.png" alt="dnd characters" />
  </figure>
</section>

<style>
  section {
    position: relative;
    z-index: 2;
    margin-top: var(--gap-l);
    color: var(--text);
  }
  h2 {
    font-size: 80px;
    line-height: 86px;
    color: var(--text);
    margin-bottom: 65px;
    margin-left: 101px;
    margin-top: 136px;
  }
  
  .plan__list {
    width: 530px;
    margin: 0;
    padding: 0;
    padding-left: calc(7px + 22px + 22px + 62px);
    counter-reset: list-counter;
    list-style: none;
    position: relative;
    margin-left: 183px;
  }

  .plan__list::before {
    content: '';
    width: 7px;
    height: 100%;
    position: absolute;
    left: calc(62px + 22px - 7px);
    top: 0;
    background: linear-gradient(to bottom, #DBFC5400, #DBFC54, #DBFC54, #DBFC5400);
  }

  .plan__item {
    margin-bottom: 62px;
    counter-increment: list-counter;
    position: relative;
  }
  .plan__item:before {
    content: counter(list-counter, decimal-leading-zero);
    position: absolute;
    left: calc(-62px - 22px - 22px - 7px);
    top: 10px;
    color: var(--text);
    font-weight: 400;
    font-size: 48px;
    line-height: 21px;
  }

  .plan__name {
    color: var(--accent-2-secondary);
    margin-bottom: var(--gap-xxl);
    font-weight: 400;
    font-size: 32px;
    line-height: 21px;
  }

  .plan__description {
    font-size: 16px;
    line-height: 21px;
    font-weight: 400;
  }

  .illustration {
    position: absolute;
    right: 5%;
    top: 15%;
  }
</style>