---
const {list} = Astro.props;
---
<ol class="plan__list">
  {list.map((item) => (
    <li class="plan__item">
      <p class="plan__name">{item.title}</p>
      <p class="plan__description">{item.text}</p>
    </li>
  ))}
</ol>

<style>
  .plan__list {
    width: 530px;
    margin: 0;
    padding: 0;
    padding-left: calc(7px + 22px + 22px + 62px);
    counter-reset: list-counter;
    list-style: none;
    position: relative;
    margin-left: 183px;
  }
  .plan__list::before {
    content: '';
    width: 7px;
    height: 100%;
    position: absolute;
    left: calc(62px + 22px - 7px);
    top: 0;
    background: linear-gradient(to bottom, #DBFC5400, #DBFC54, #DBFC54, #DBFC5400);
  }
  .plan__item {
    margin-bottom: 62px;
    counter-increment: list-counter;
    position: relative;
  }
  .plan__item:before {
    content: counter(list-counter, decimal-leading-zero);
    position: absolute;
    left: calc(-62px - 22px - 22px - 7px);
    top: 10px;
    color: var(--text);
    font-weight: 400;
    font-size: 48px;
    line-height: 21px;
  }
  .plan__name {
    color: var(--accent-2-secondary);
    margin-bottom: var(--gap-xxl);
    font-weight: 400;
    font-size: 32px;
    line-height: 21px;
  }

  .plan__description {
    font-size: 16px;
    line-height: 21px;
    font-weight: 400;
  }
</style>