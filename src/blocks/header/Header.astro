---
import content from '../../content/atlant.json';
import Button from '../../ui/Button.astro';
import Link from '../../ui/Link.astro';

const {menu, headerButtons} = content;

---
<header>
  <h2 class="logo">AI Atlant</h2>
  <nav class="navigation">
    {menu.map((item) => (
      <Link href={item.href} class="menu-item">{item.title}</Link>
    ))}
  </nav>
  <div class="actions">
    {headerButtons.map((item) => (
      <Button tag="a" href={item.href} class="action-item">{item.label}</Button>
    ))}
  </div>
</header>

<style>
  header {
    position: relative;
    z-index: 2;
    border-radius: var(--radius-l);
    background: var(--primary-1);
    padding: 12px var(--gap-xl);
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
  }

  .logo {
    color: var(--text);
    font-family: "Jomhuria", sans-serif;
    font-weight: 400;
    font-size: 56px;
    line-height: 56px;
  }

  .navigation {
    align-content: center;
    display: flex;
    align-items: center;
    justify-content: center;
    column-gap: 113px;
  }

  .menu-item {
    color: var(--text);
    font-size: var(--size-l);
    text-decoration: none;
  }

  .menu-item.active {
    color: var(--accent-2-secondary);
  }

  .actions {
    display: flex;
    gap: var(--gap-xl);
    justify-self: end;
  }

  .action-item {
    font-size: var(--size-m);
    font-weight: 600;
    padding: 12px 24px;
    height: 56px;
    display: flex;
    align-items: center;
  }

  /* tablet vertical - games slider */
  @media (max-width: 834px) {
    header {
      display: none;
    }
  }
</style>