---
const {view = "default", class: className, ...rest } = Astro.props;

const finalClassName = `${className} ${view}`
---
<a class={finalClassName} {...rest}>
  <slot />
</a>

<style>
  a {
    text-decoration: none;

    font-size: 24px;
    line-height: 35px;

    transition: 0.2s ease;
  }

  .default {
    color: var(--text);
  }

  .default:hover {
    color: var(--accent-2-primary);
  }

  .accent {
    color: var(--accent-2-secondary);
  }

  .accent:hover {
    color: var(--accent-2-primary);
  }

  .default[data-disabled] {
    pointer-events: none;
    color: var(--secondary-1);
  }

  .accent[data-disabled] {
    pointer-events: none;
    color: var(--secondary-2);
  }
</style>