---
const {class: className, ...rest } = Astro.props;
const finalClassName = `${className} badge`;
---
<div class={finalClassName} {...rest}>
  <slot />
</div>

<style>
  .badge {
    padding: 12px 14px 12px 14px;
    border-radius: 42px;
    background-color: var(--accent-1-primary);
    text-transform: uppercase;
    font-size: 20px;
    line-height: 21px;
    font-weight: 900;
  }
</style>