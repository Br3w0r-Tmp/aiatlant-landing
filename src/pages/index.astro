---
import Footer from '../blocks/footer/Footer.astro';
import Games from '../blocks/games/Games.astro';
import Header from '../blocks/header/Header.astro';
import Hero from '../blocks/hero/Hero.astro';
import Info from '../blocks/info/Info.astro';
import Plans from '../blocks/plans/Plans.astro';
import '../styles/reset.css';
import '../styles/fonts.css';
import '../styles/main.css';

const TITLE = 'Ai Atlant';
const LANG = 'en';
---

<html lang={LANG}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{TITLE}</title>
	</head>
	<body>
		<Header />
    <Hero />
    <Info />
    <Games />
    <Plans />
    <Footer />
	</body>
</html>

<style>
	body {
		padding: var(--gap-xl);
		background: var(--primary-1);
		font-family: "Jost";
	}
</style>